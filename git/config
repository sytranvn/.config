[init]
	defaultBranch = master


[core]
	excludesfile = ~/.config/git/.gitignore
[rerere]
	enabled = true
[alias]
	adog = log --all --decorate --oneline --graph
[diff]
    tool = nvim
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "nvim"]
    cmd = "nvim -d $LOCAL $REMOTE"
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
[pull]
	ff = only
	rebase = true
[rebase]
	autoStash = true

[push]
    default = simple
    autoSetupRemote = true

[status]
    submoduleSummary = true
    recurse = true

[fetch]
    prune = true
    prunetags = true

[include]
    path = userconfig

